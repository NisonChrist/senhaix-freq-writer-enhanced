<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="250" Height="300"
        x:Class="SenhaixFreqWriter.Views.Common.HintWindow"
        Title="HintBT"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None"
        BorderThickness="1"
        BorderBrush="Brown"
        Background="BlanchedAlmond"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <ScrollViewer VerticalScrollBarVisibility="Auto"   Width="250" Height="250">
            <TextBlock IsEnabled="False" x:Name="label" Canvas.Left="20" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Canvas.Bottom="20" Canvas.Left="100" Content="关闭" x:Name="button" Click="Button_OnClick" />
    </Canvas>

</Window>