<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" Height="150"
        x:Class="SenhaixFreqWriter.Views.Common.DeviceSelectWindow"
        Title="选择设备"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label Canvas.Top="20" Canvas.Left="10">选择设备:</Label>
        <ComboBox Canvas.Top="50" Canvas.Left="55" Width="200" Name="DeviceChooseComboBox" SelectedIndex="0">
            <ComboBoxItem Content="森海克斯8800/8600" />
            <ComboBoxItem Content="森海克斯GT12" />
        </ComboBox>
        <CheckBox Content="全局调试" Canvas.Top="100" Canvas.Left="10" IsCheckedChanged="ToggleButton_OnIsCheckedChanged"></CheckBox>
        <Button Canvas.Top="100" Canvas.Left="130" Click="Device_OnClick">确定</Button>
    </Canvas>
</Window>